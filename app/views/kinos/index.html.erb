<h1>Lista kin</h1>
<table>
  <tr>
    <th>Nazwa:</th>
    <th>Adres:</th>
    <th>Odległość:</th>
    <th></th>
  </tr>

<% @kina.each do |kino| %>
  <tr>
    <td><%= kino[1].nazwa %></td>
    <td><%= kino[1].adres %></td>
    <td><%= "#{(kino[0]*1000).to_i.to_f/1000} km" %></td>
    <td><%= link_to 'Pokaż', kino[1] %></td>
  </tr>
<% end %>
</table>